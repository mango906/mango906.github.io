{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": ".",
    "typeRoots": ["./@types"],
    "types": ["node"]
  },
  "include": ["src"]
}
